<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace 命名空间，绑定一个对应的 Mapper 接口，且为全限定类名 -->
<mapper namespace="com.mapper.AccountMapper">
    <!-- 查询所有 -->
    <!-- id 为 namespace 指定接口的方法名字 -->
    <!-- resultType 为 SQL 执行后返回的结果类型，如果是 pojo 类，需要用全限定类名 -->
    <select id="findAccountList" resultType="com.pojo.Account">
        select * from tb_account
    </select>

</mapper>